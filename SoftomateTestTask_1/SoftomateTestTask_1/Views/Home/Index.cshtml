@model SoftomateTestTask_1.Models.Person
@{
    ViewBag.Title = "Home Page";
}

<table class="table table-striped table-bordered table-hover">
	<tr>
		<th>
			Фамилия
		</th>
		<th>
			Имя
		</th>
		<th>
			Отчество
		</th>
	</tr>

	@foreach(SoftomateTestTask_1.Models.Person person in ViewBag.People) { 
		<tr>
			<th>@person.LastName</th>
			<th>@person.FirstName</th>
			<th>@person.Patronymic</th>
		</tr>
	}
	
</table>
<div class="row">
	<div class="col-md-2 col-md-offset-10">@Html.ActionLink("Добавить", "AddPerson", "Home", null, new { @class = "btn btn-primary btn-large" })</div>
</div>
